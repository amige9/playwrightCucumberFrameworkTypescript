{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths":[
            "src/test/features/"
        ],
        "dryRun": false,
        "require": [
            "src/test/steps/*.ts",
            "src/support/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "json:test-results/HTMLReport/cucumber-report.json",
            "rerun:@rerun.txt"
        ],
        "parallel":1
    },
    "rerun": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "dryRun": false,
        "require": [
            "src/test/steps/*.ts",
            "src/support/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "json:test-results/HTMLReport/cucumber-report.json",
            "rerun:@rerun.txt"
        ]
    }
}